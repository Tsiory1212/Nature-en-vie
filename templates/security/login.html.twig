{% extends "base.html.twig" %}
{% block title %}Se connecter{% endblock %}

{% block body %}
    
 <div class="container mt-4">
    {% if hasError %}
        <div class="alert alert-danger">
            <p>Les informations que vous avez fournies ne sont pas bonnes</p>
        </div>
    {% endif %}

    <form action="{{ path('security_login')}}" method="post">
        <div class="form-group">
            <lable for="username"> Nom d'utilisateur</lable>
            <input type="text" id="username" name="_username" class="form-control" value="{{ lastUser }}">
        </div>
        <div class="form-group">
            <lable for="password"> Mot de passe</lable>
            <input type="password" id="password" name="_password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary"> Se connecter</button>
    </form>
</div>
  
{% endblock %}