{% extends 'base_admin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}


<div class="container mt-3">
    
	{% for label, messages in app.flashes %}
        <div class="alert alert-{{label}} text-center">
            {% for message in messages %}
                {{message | raw}}
            {% endfor %}
        </div>
    {% endfor %}

        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"> Ajout produit</a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Ajout produit &raquo; </a>
                    <ul class="submenu dropdown-menu">
                        {% for category in categories %}
                            <li><a class="dropdown-item" href="{{path('admin_category_addProduct', {id: category.id})}}">{{ category.name }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
                </ul>
            </li>
        </ul>

        <h1 class="text-center">Liste des catégories</h1>
        <a href="{{path('admin_category_add')}}" class="btn btn-primary">Ajout catégorie</a>
    <table class="table table-striped">
        <thead>
            <tr class="text-center">
                <th scope="col">Nom</th>
                <th scope="col">Icon</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <th scope="row">{{category.name}}</th>
                    <td>Image</td>
                    <td>
                        <a href="{{path('admin_category_edit', {id: category.id})}}" class="btn btn-secondary"> <i class="fas fa-edit"></i> </a>
                        <form method="post" action="{{path('admin_category_delete', {id: category.id})}}" style="display: inline-block;" onsubmit="return confirm('Êtes vous vraiment sûr ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
