{% extends 'base_editor.html.twig' %}

{% block title %}
    Modification mot de passe
{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 100px;">
        <h2 class="text-center">Modification du mot de passe</h2>

        {{ form_start(formUser) }}
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-7">
                
                <label for="password_update_newPassword" class="mt-4"> Nouveau mot de passe</label>
                {{ form_widget(formUser.newPassword, {'label' : false}) }}
                <span class="help-block">{{ form_errors(formUser.newPassword) }}</span>

                <label for="password_update_confirmPassword" class="mt-4"> Confirmation de mot de passe</label>
                {{ form_widget(formUser.confirmPassword, {'label' : false}) }}
                <span class="help-block">{{ form_errors(formUser.confirmPassword) }}</span>
                
                <button class="btn btn-success mt-4" type="submit">Enregistrer</button>
            </div>
            <div class="col-md-3">
              
            </div>
        </div>
        {{ form_end(formUser) }}
    </div>
{% endblock %}
