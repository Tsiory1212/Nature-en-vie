{% extends 'base.html.twig' %}

{% block title %}
    Paypal Ã©tape 1
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/order_stepper.css">
    <style>
        #header{
            position: relative;
            margin-bottom: 100px;
        }

        body{
        	background-image: url('/biolife/assets/images/home-01/main-slide-01.jpg');
        }

        .fa-shopping-cart{
            color: #4CAF50;
            margin-top: -61px;    
            margin-right: 33px;
        }
    </style>
{% endblock %}


{% block body %}

    <div class="content">  
        {% include "partials/_order_stepper_progress_bar.html.twig" %}

        <div class="container bg-glass2 my-5">
            <!-- Etape 1 : Mon panier  -->
            <div id="step-1">
                <div class="container bg-white panier_body shadow-lg p-3 mb-5 bradius-3rem">
                    <div class="d-flex text-white justify-content-center my-3">
                        <h1 class="font-bg-stylized-1">
                            1- Mon panier
                            {% if myLastFavCart is empty or myLastFavCart.cart != itemsInTab %}
                                <i class="far fa-heart d-inline " type="button" data-bs-toggle="modal" data-bs-target="#modal-favorite-cart"></i>
                            {% elseif myLastFavCart and myLastFavCart.cart == itemsInTab %}
                                <form method="post" action="{{path('favorite_cart_delete', {cart: myLastFavCart.id} )}}" style="display: inline-block;" onsubmit="return confirm('Enleve le panier favori ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                                    <button style="background-color: unset; border: none;"><i class="fas fa-heart d-inline"></i></button>
                                </form>
                            {% endif %}
                        </h1>
                    </div>
                    <div class="content-step-1">
                        <a href="{{path('all_products')}}">
                            <i class="fas fa-shopping-cart fa-2x float-end"></i>
                        </a>

                        {% include "partials/_cart.html.twig" %}

                    </div>
                </div>

            </div>
            <a href="{{ path('account_order_step_two') }}" class="button button1-inverse" style="float: right;">Suivant <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>

    <!-- Modal : Favorite cart  -->  
    {{ form_start(formFavCart) }}
    <div class="modal" id="modal-favorite-cart" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Enregistrement du panier</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Nom:</label>
                        {{ form_widget(formFavCart.name) }}
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Description:</label>
                        {{ form_widget(formFavCart.description) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Enregistrer le panier</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(formFavCart) }}
{% endblock %}
