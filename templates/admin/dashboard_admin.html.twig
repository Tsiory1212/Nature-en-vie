{% extends 'base_admin.html.twig' %}

{% block title %}
	Dashboard
{% endblock %}


{% block body %}
    <div class="container mt-5">
		<div class="row">
			<div class="col-md-4">
				<div class="card text-white bg-success mb-3" style="max-width: 18rem;">
					<div class="card-header"><a href="{{ path('admin_product_list') }}" class="btn">Produits</a></div>
					<div class="card-body">
					  <h5 class="card-title">{{ products|length }}</h5>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card text-white bg-warning mb-3" style="max-width: 18rem;">
					<div class="card-header"><a href="{{ path('admin_subscription_list') }}" class="btn">Abonnements</a></div>
					<div class="card-body">
					  <h5 class="card-title">{{ subscriptions|length }}</h5>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
					<div class="card-header"><a href="{{ path('admin_user_list') }}" class="btn">Utilisateurs</a></div>
					<div class="card-body">
					  <h5 class="card-title">{{ users|length }}</h5>
					</div>
				</div>
			</div>
		</div>
    </div>
{% endblock %}
