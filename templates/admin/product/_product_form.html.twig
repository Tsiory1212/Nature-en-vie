<div class="container">

            {% if produit is defined and produit.imageName %}
                <img src="{{ vich_uploader_asset(produit, 'imageFile') }}" alt="img-{{produit.name}}" width="100">
            {% else %}
                <img src="/uploads/produit/images/defaultImage.png" alt="card-img-top" class="product-thumnail" width="300">        
            {% endif %}

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-8">
               
                {% if produit is not defined %}
                    {% if not form.vars.valid %}
                        <div class="alert alert-danger">
                                Duplication de la RéférenceID. Essayer {{newRefId}}
                        </div>
                    {% endif %}
                    {{ form_row(form.referenceId, { 'attr' : { 'value' : newRefId, 'placeholder' : 'Réference du produit'} } ) }}
                {% else %}
                    {{ form_row(form.referenceId, { 'attr' : { 'placeholder' : 'Réference du produit'} } ) }}
                {% endif %}
                {{ form_row(form.name) }}
                {{ form_row(form.price) }}
                {{ form_row(form.weight) }}
                {{ form_row(form.quantity) }}
                {{ form_row(form.detail) }}
                {{ form_row(form.description) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.category) }}
                {{ form_row(form.classement) }}
                {{ form_row(form.gamme) }}
            </div>
        </div>
    
        <div class="row">
            {{ form_rest(form) }}
        </div>
        
        <button class="btn {{btn_class}}">{{ button|default('Ajouter') }}</button>
    {{ form_end(form) }}
</div>
