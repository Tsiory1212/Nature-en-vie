{% extends "base.html.twig" %}
{% block title %}Se connecter{% endblock %}

{% block stylesheets %}
    <style>
        .hero-section.hero-background {
            z-index: 12;
        }

        .login-content-block{
            top: -28px !important;
            position: relative;
        }
 
    </style>
{% endblock %}

{% block body %}
    
<body class="biolife-body">
    <div class="page-contain">
        <!-- Image bannière  -->
        <div class="banner-media-layout-01"></div>

        <div class="text-content3">  

            <!--Hero Section-->
            <div class="hero-section hero-background container-fluid full-width"></div>

            <!-- block fields login -->
            <div class="login-content-block bg-glass px-lg-5 mx-lg-5 px-sm-1 mx-sm-0 bradius-3rem"> 
                <div class="page-contain login-page">

                    <!-- Main content -->
                    <div id="main-content" class="main-content">
                        <div class="container">

                            <div class="row">

                                <!--Form Sign In-->
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="signin-container">
                                        {% if hasError %}
                                            <div class="alert alert-danger text-center">
                                                <p>Les informations que vous avez fournies ne sont pas bonnes</p>
                                            </div>
                                        {% endif %}
                                        <form action="{{ path('security_login')}}" method="post">
                                            <p class="form-row">
                                                <label for="fid-name">Adresse email:<span class="requite">*</span></label>
                                                <input type="email" id="fid-name" name="_username" value="{{ lastUser }}" class="txt-input form-control">
                                            </p>
                                            <p class="form-row">
                                                <label for="fid-pass">Mot de passe:<span class="requite">*</span></label>
                                                <input type="password" id="fid-pass" name="_password" value="" class="txt-input form-control">
                                            </p>
                                            <p class="form-row wrap-btn">
                                                <button type="submit" class="btn btn-bold"> Se connecter</button>
                                            </p>
                                        </form>
                                    </div>
                                </div>

                                <!--Go to Register form-->
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="register-in-container">
                                        <div class="intro bg-white bradius-3rem">
                                            <h4 class="box-title">Nouveau client?</h4>
                                            <p class="sub-title">Créez un compte chez nous et vous pourrez :</p>
                                            <ul class="lis">
                                                <li>Vérifiez plus rapidement</li>
                                                <li>Économisez plusieurs frais d'expédition</li>
                                                <li>Accédez à l'historique de vos commandes</li>
                                                <li>Suivre les nouvelles commandes</li>
                                                <li>Enregistrer des articles dans votre liste de souhaits</li>
                                            </ul>
                                            <a href="{{path('registration')}}" class="btn button button1 mt-5">Créer un compte</a>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</body>




{% endblock %}