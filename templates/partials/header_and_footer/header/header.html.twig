<!-- HEADER -->
<header id="header" class="header-area style-01 layout-01">
    <div class="header-top hidden-xs hidden-sm">
        <div class="container">
            <div class="top-bar left">
                <ul class="horizontal-menu">
                    <li><a href="mailto:info@nature-en-vie.fr"><i class="fa fa-envelope" aria-hidden="true"></i>info@nature-en-vie.fr</a></li>
                </ul>
                <ul class="social-list circle-layout">
                    <li><a href="https://www.instagram.com/nature_en_vie"><i class="fa-brands fa-linkedin"></i></a></li>
                    <li><a href="https://www.instagram.com/nature_en_vie"><i class="fa-brands fa-instagram-square"></i></a></li>
                    <li><a href="https://www.facebook.com/coinnat?_rdc=1&_rdr"><i class="fab fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fab fa-pinterest"></i></a></li>
                </ul>
            </div>
            <div class="top-bar right">
                <ul class="horizontal-menu">
                    {% if app.user %}
                        <li class="horz-menu-item currency">
                            {# <a href="{{path('panier_show')}}" class="btn btn-warning">Panier</a> #}
                        </li>
                        <li><a href="{{path('dashboard')}}" class="login-link"><i class="biolife-icon icon-login"></i>{{app.user.lastname}}</a></li>
                        <li><a href="{{path('security_logout')}}" class="logout-link"><i class="fas fa-sign-out-alt"></i> Déconnection</a></li>
                    {% else %}
                        <li><a href="{{path('security_login')}}" class="login-link"><i class="biolife-icon icon-login"></i>S'inscrire / Se connecter</a>></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <div class="header-middle hidden-sm hidden-xs">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-2 col-md-6 col-xs-6">
                    <a href="{{ path('home') }}" class="biolife-logo"><img src="/assets/images/logo/logo-bio.png" class="logo-bio-header" alt="bio logo" width="120"></a>
                </div>
                <div class="col-lg-9 col-md-10 padding-top-2px">
                    <div class="header-search-bar layout-01 no-product-cat">
                        <form action="#" class="form-search" name="desktop-seacrh" method="get">
                            <input type="text" name="s" class="input-text" value="" placeholder="Recherche...">
                            <button type="submit" class="btn-submit"><i class="biolife-icon icon-search"></i></button>
                        </form>
                    </div>
                    <div class="live-info">
                        <p class="telephone"><i class="fa fa-phone" aria-hidden="true"></i><b class="phone-number">04 70 35 08 96</b></p>
                        <p class="working-time">Du lundi au dimanche de 8h00 à 18h00</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
        
    <!-- Liste menu  -->
    <div class="header-bottom biolife-sticky-object">
        <div class="container md-possition-relative text-center">
            <div class="row">
                {% if categories_in_navbar is defined %}
                <div class="col-lg-3 col-md-4 hidden-sm hidden-xs">
                    <div class="vertical-menu vertical-category-block ">
                        <div class="block-title">
                                <span class="menu-icon">
                                    <span class="line-1"></span>
                                    <span class="line-2"></span>
                                    <span class="line-3"></span>
                                </span>
                            <span class="menu-title">Toutes les catégories</span>
                            <span class="angle" data-tgleclass="fa fa-caret-down"><i class="fa fa-caret-up" aria-hidden="true"></i></span>
                        </div>
                        <div class="wrap-menu">
                            <ul class="menu clone-main-menu">
                                {% for category in categories_in_navbar %}
                                    <li class="menu-item menu-item-has-children has-child">
                                        <a href="#" class="menu-name" data-title="Butter & Eggs"><i class="biolife-icon icon-honey"></i>{{category.name}}</a>
                                        <ul class="sub-menu">
                                            {# on prend 10 produits au hasard #}
                                            {% for produit in category.products|slice(random(category.products|length), 10) %}
                                                <li class="menu-item"><a href="{{path('product_show', {id: produit.id, slug: produit.slug})}}">{{produit.name}}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
                {% endif %}
                <div class="{% if app.user and app.request.get('_route') == 'all_products' or app.request.get('_route') == 'product_show' %}col-lg-6 {% else %}col-lg-12 {% endif %} col-md-10 hidden-sm hidden-xs md-possition-initial">
                    <div class="primary-menu">
                        <ul class="menu biolife-menu clone-main-menu clone-primary-menu" id="primary-menu" data-menuname="main menu">
                            <li class="menu-item"><a href="{{path('home')}}">Accueil</a></li>
                            <li class="menu-item">
                                <a href="{{path('presentation_ferme')}}">La ferme</a>
                                {# <ul class="sub-menu">
                                    <li class="menu-item"><a href="{{path('presentation_ferme')}}">Présentation de la ferme</a></li>
                                    <li class="menu-item menu-item-has-children has-child"><a href="#" class="menu-name" data-title="Eggs & other considerations">Nous connaître</a>
                                        <ul class="sub-menu">
                                            <li class="menu-item"><a href="{{path('Comment_ca_fonctionne')}}">Comment ça fonctionne</a></li>
                                            <li class="menu-item"><a href="{{path('les_produit_de_notre_boutique_bio')}}">Les produits de notre boutique Bio</a></li>
                                            <li class="menu-item"><a href="{{path('les_marches')}}">Les marchés</a></li>
                                        </ul>
                                    </li>
                                    <li class="menu-item menu-item-has-children has-child"><a href="#" class="menu-name" data-title="Eggs & other considerations">AUTRES</a>
                                        <ul class="sub-menu">
                                            <li class="menu-item"><a href="{{path('commerce_de_gros_et_demi_gros')}}">Commerce de gros et demi-gros</a></li>
                                            <li class="menu-item"><a href="{{path('commandes')}}">Commandes</a></li>
                                            <li class="menu-item"><a href="{{path('contact')}}">Contactez-nous</a></li>
                                        </ul>
                                    </li>
                                </ul> #}
                            </li>
                            <li class="menu-item menu-item-has-children has-child text-start">
                                <a href="#" class="menu-name" data-title="Product">Nos Paniers</a>
                                <ul class="sub-menu">
                                    {% for subscriptionCart in subscriptionPlans_subcriberEvent %}
                                        <li class="menu-item"><a href="{{ path('cart_subscription_show', {id: subscriptionCart.id}) }}">{{ subscriptionCart.name }}</a></li>
                                    {% endfor %}
                                    <hr>
                                    <li class="menu-item"><a href="{{ path('all_products') }}">Panier sur mesure</a></li>
                                </ul>
                            </li>
                            <li class="menu-item"><a href="{{path('subscription_list')}}">Abonnement</a></li>
                            <li class="menu-item"><a href="{{path('professionnel')}}">Professionnel</a></li>
                            <li class="menu-item"><a href="{{ path('blog') }}">Blog</a></li>
                            <li class="menu-item"><a href="{{path('contact')}}">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                    <div class="logo-for-mobile hidden-lg hidden-md">
                        <a href="{{ path('home') }}" class="biolife-logo"><img src="/assets/images/logo/logo-bio.png" alt="bio logo" width="60"></a>
                    </div>
                    <div class="biolife-cart-info center-align-mobile">
                        <div class="mobile-search">
                            <a href="javascript:void(0)" class="open-searchbox"><i class="biolife-icon icon-search"></i></a>
                            <div class="mobile-search-content">
                                <form action="#" class="form-search" name="mobile-seacrh" method="get">
                                    <a href="#" class="btn-close"><span class="biolife-icon icon-close-menu"></span></a>
                                    <input type="text" name="s" class="input-text" value="" placeholder="Recherche ici......">
                                    
                                    <button type="submit" class="btn-submit">go !</button>
                                </form>
                            </div>
                        </div>
                        <div class="user-block">
                            <div class="open-searchbox">
                                <i class="biolife-icon icon-search"></i>
                            </div>
                        </div>



                        {# MINI PANIER #}
                        {% if app.user and cartItems_subcriberEvent['items']|length > 0 or app.request.get('_route') == 'all_products' or app.request.get('_route') == 'product_show'    %}
                        {# {% if app.user and app.request.get('_route') == 'all_products' or app.request.get('_route') == 'product_show' %} #}
                            <div class="minicart-block layout-02" {% if app.user and app.request.get('_route') == 'all_products' or app.request.get('_route') == 'product_show' %} style="left: 0; top: 0;" {% endif %}>
                                <div class="minicart-contain">
                                    <div class="icon-contain">
                                        <div class="span-index">
                                            <i class="icon-cart-mini biolife-icon"></i>
                                            <span class="qty">{{cartItems_subcriberEvent['quantity'] }}</span>

                                            <span class="sub-total"> 
                                                <span class="quantity-item">{{cartItems_subcriberEvent['quantity'] }}</span>  article(s) - <span class="total-price">{{ cartItems_subcriberEvent['totalPrice'] }} </span> € 
                                            </span>
                                        </div>
                                        <a href="#" class="btn-to-cart">Go</a>
                                    </div>
                                    <div class="cart-content" style="z-index: 9999!important">
                                        <div class="cart-inner">
                                            <ul class="products">
                                                {% for item in cartItems_subcriberEvent['items'] %}
                                                    <li>
                                                        <div class="minicart-item">
                                                            <div class="thumb">
                                                                <a href="{{path('product_show', {id: item.product.id, slug: item.product.slug})}}">
                                                                    {% if item.product.imageName %}
                                                                        <img src="{{ vich_uploader_asset(item.product, 'imageFile') }}" width="60" height="60">
                                                                    {% else %}
                                                                        <img src="/uploads/produit/images/defaultImage.png"  width="60" height="60">
                                                                    {% endif %}
                                                                </a>
                                                            </div>
                                                            <div class="left-info">
                                                                <div class="product-title"><a href="{{path('product_show', {id: item.product.id, slug: item.product.slug})}}" class="product-name">{{item.product.name}}</a></div>
                                                                <div class="price">
                                                                    <ins><span class="price-amount">{{item.product.price}}<span class="currencySymbol">£</span></span></ins>
                                                                    {# <del><span class="price-amount"><span class="currencySymbol">£</span>95.00</span></del> #}
                                                                </div>
                                                                <div class="qty">
                                                                    <label for="cart-qty">Qté:</label>
                                                                    {# ORIGINAL HTML #}
                                                                    {# <input type="number" class="input-qty" name="cart-qty" value="{{item.quantity}}" disabled> #}
                                                                    <span> <h2>x{{item.quantity}}</h2> </span>
                                                                </div>
                                                            </div>
                                                            <div class="action">
                                                                {# <a href="#" class="edit"><i class="fas fa-pencil-alt"></i></a> #}
                                                                <a href="{{path('panier_delete_item', {id: item.product.id})}}" class="remove js-mini_cart-item_delete"><i class="fas fa-trash-alt"></i></a>
                                                            </div>
                                                        </div>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                            <p class="btn-control">
                                                <a href="{{path('account_order_step_one')}}" class="btn view-cart">Commander</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    
                        {% endif %}
                        <div class="mobile-menu-toggle">
                            <a class="btn-toggle" data-object="open-mobile-menu" href="javascript:void(0)">
                                <span></span>
                                <span></span>
                                <span></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>



