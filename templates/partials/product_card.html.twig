<div class="contain-product layout-default">
    <div class="product-thumb">
        <a href="{{path('product_show', {id: produit.id, slug: produit.slug})}}" class="link-to-product">
            {% if produit.imageName %}
                <img src="{{ vich_uploader_asset(produit, 'imageFile')}}" alt="card-img-top" width="50" >
            {% else %}
                <img src=" {{ asset('/uploads/produit/images/defaultImage.png' ) }} " alt="card-img-top"   >        
            {% endif %}
        </a>
        <a class="lookup btn_call_quickview quick-view-block-js" href="#"><i class="biolife-icon icon-search"></i></a>
    </div>
    <div class="info">
        <b class="categories">{{produit.category.name}}</b>
        <h4 class="product-title"><a href="{{path('product_show', {id: produit.id, slug: produit.slug})}}" class="pr-name">{{produit.name}}</a></h4>
        <h4 class="product-description visually-hidden">{{produit.description}}</h4>
        <div class="price ">
            <ins><span class="price-amount">{{produit.price}}<span class="currencySymbol">€</span></span></ins>
            <del><span class="price-amount">95.00<span class="currencySymbol">€</span></span></del>
        </div>
        <div class="slide-down-box">
            <p class="message">{{produit.detail}}</p>
            <div class="buttons">
                {# <a href="#" class="btn wishlist-btn"><i class="fa fa-heart" aria-hidden="true"></i></a> #}
                {% if app.user %}
                    <a href="{{path('panier_add', {id: produit.id})}}" class="btn add-to-cart-btn js-add-cart"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i>Ajouter au panier</a>
                {% else %}
                    <a href="{{path('product_show', {id: produit.id, slug: produit.slug})}}" class="btn add-to-cart-btn"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i>Plus de détail</a>
                {% endif %}
                
                {# <a href="#" class="btn compare-btn"><i class="fa fa-random" aria-hidden="true"></i></a> #}
            </div>
        </div>
    </div>
</div>

