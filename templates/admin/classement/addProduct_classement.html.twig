        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-8">
                    {{ form_row(form.name) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.weight) }}
                    {{ form_row(form.quantity) }}
